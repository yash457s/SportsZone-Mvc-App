@model IEnumerable<WebAppMVC.Models.Product>

@{
//ViewBag.Title = "Search";
}

<h2 class="text-center bg-warning">Search</h2>
@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <div class="container">
        <input type="text" name="name" class="form-control" placeholder="Search"/><br />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
}

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
           ADD To Cart
        </th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stock)
    </td>
    <td>
        @if (Session["UserId"] != null)
        {
            @Html.ActionLink("Add To Cart", "OrderNow", "Cart", new { id = item.ProId }, null)

        }
        else
        {
            @Html.ActionLink("Add To Cart", "Order", "Cart")
        }

    </td>

