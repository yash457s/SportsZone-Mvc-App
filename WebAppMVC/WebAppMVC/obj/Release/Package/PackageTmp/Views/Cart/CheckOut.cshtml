
@{
    //ViewBag.Title = "CheckOut";
}
@using WebAppMVC.Controllers
<h2 class="text-center bg-warning">Order Successfully Booked</h2>
<h2 class="text-center bg-secondary">And will Be Delivered To Your Address Safely</h2>

<h3 class="text-center">Delivery Information</h3>
<div class="container">
    <table class="table table-dark table-striped">
        <thead>

            <tr>
               
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Mobile Number</th>
                <th>Payment Mode</th>
            </tr>
        </thead>
        <tbody>
            <tr>
             
                <td>@Session["UserFirstName"]</td>
                <td>@Session["UserLastName"]</td>
                <td>@Session["UserAddress"]</td>
                <td>@Session["UserMobile"]</td>
                <td>Cash On Delivery</td>
            </tr>
        </tbody>

    </table>
    </div>
<h3 class="text-center bg-danger">Shopping Details</h3>
    <div class="container">
        <table class="table table-dark table-striped">
            <tr>
               
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
               
            </tr>
            @{
                decimal s = 0;
            }
            @foreach (Item item in (List<Item>)Session["cart"])
            {
                s = s + Convert.ToDecimal(item.Product.ProPrice * (item.quantity));
                <tr>
                   
                    <td>@item.Product.ProName</td>
                    <td>@item.Product.ProPrice</td>
                    <td>@item.quantity</td>
                    <td>@(item.Product.ProPrice * item.quantity)</td>
                   

                </tr>
            }
            <tr style="background-color:lightcoral">
                <td>Total Amount To be Paid</td>
                <td>@s</td>
            </tr>

        </table>
    </div>



