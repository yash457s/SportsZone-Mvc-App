@model IEnumerable<WebAppMVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

@*@using (Html.BeginForm("Index","Search",FormMethod.Post))
    {
        <span>Enter Product : </span>@Html.TextBox("text")
        <input type="submit" value="Search Products" />

    }*@
<h2 class="text-center bg-warning">All Products</h2>
@foreach (var item in Model)
{
    <div class="container">
        <div class="row" >
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="~/Images/sports-balls-on-black-background_cczzxcfzx_6.5.jpg" / style="height:150px; width:150px">
                            @*<img scr="@Url.Content(item.ProPic)" />*@
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                
                                @Html.DisplayFor(modelItem => item.ProPrice)
                            </span>
                            <small class="text-muted"> Stock: @Html.DisplayFor(modelItem => item.Stock)</small>
                            <a href="#" class="product-name"> @Html.DisplayFor(modelItem => item.ProName)</a>

                            <div class="small m-t-xs">
                                @Html.DisplayFor(modelItem => item.ProDescription)
                            </div>
                            <div class="m-t text-righ">
                                @if (Session["UserId"] != null)
                                {
                                    @Html.ActionLink("Add To Cart", "OrderNow", "Cart", new { id = item.ProId }, null)

                                }
                                else
                                {
                                    @Html.ActionLink("Add To Cart", "Order", "Cart")
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
